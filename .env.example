# Core Configuration
NODE_ENV=development
PORT=5000
CLIENT_ORIGIN=http://localhost:5173
BASE_URL=http://localhost:5000

# Logging
LOG_LEVEL=info

# Database (Required)
DATABASE_URL=your_database_url_here

# Authentication (Required)
# Generate a secure JWT secret with: 
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your_jwt_secret_here_min_32_chars

# For JWT rotation support (optional, comma-separated)
# First secret is used for signing, others for verification during rotation
JWT_SECRETS=current_secret_64chars,previous_secret_64chars

# JWT Configuration
JWT_ISS=rainbow-crm
JWT_AUD=rainbow-web
JWT_EXPIRES=7d

# Session secret for express-session
SESSION_SECRET=your_session_secret_here

# Security Options
CSP_ENABLE_NONCE=false

# AI Design Agent (Optional)
LEONARDO_API_KEY=your_leonardo_api_key_here

# Public Asset Origin (Optional)
PUBLIC_ASSET_ORIGIN=https://your-cdn.com